<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <header>
         <%- include('layout/header.ejs')%>
    </header>
    <main id="index">
        <%   data.forEach(x=>{%>
            <div id="indexForm">

            <img  class="indexForm" src="<%= x.image%>" alt="">
            <h4 class="indexForm"><%= x.character%></h4>   
                <p  class="indexForm"><%= x.quote%></p>
                <p  class="indexForm"><%= x.characterDirection%></p>


                
                        <form action="/favorite-quotes" method="POST">
                            <input type="hidden" value="<%= x.image%>" name="image">
                            <input type="hidden" value="<%= x.character%>" name="character">
                            <input type="hidden" value="<%= x.quote%>" name="quote">
                          <input type="hidden" value="<%= x.characterDirection%>" name="characterDirection">
        
        
                            <button type="submit">ADD</button>
                        </form>
                        
                        
                    </div>
                        <% })%>


    </main>
    <footer>
        <%- include('layout/footer.ejs')%>
    </footer>
</body>

</html>